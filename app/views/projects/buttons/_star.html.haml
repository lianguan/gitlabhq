- if current_user
  = link_to toggle_star_namespace_project_path(@project.namespace, @project), { class: 'btn star-btn toggle-star has-tooltip', method: :post, remote: true, title: current_user.starred?(@project) ? '取消星标' : '加注星标' } do
    - if current_user.starred?(@project)
      = icon('star')
      %span.starred 取消星标
    - else
      = icon('star-o')
      %span 加注星标
  %div.count-with-arrow
    %span.arrow
    %span.count.star-count
      = @project.star_count

- else
  = link_to new_user_session_path, class: 'btn has-tooltip star-btn', title: 'You must sign in to star a project' do
    = icon('star')
    加注星标
  %div.count-with-arrow
    %span.arrow
    %span.count
      = @project.star_count
