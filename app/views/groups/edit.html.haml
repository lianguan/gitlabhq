.panel.panel-default.prepend-top-default
  .panel-heading
    群组设置
  .panel-body
    = form_for @group, html: { multipart: true, class: "form-horizontal" }, authenticity_token: true do |f|
      = form_errors(@group)
      = render 'shared/group_form', f: f

      .form-group
        .col-sm-offset-2.col-sm-10
          = image_tag group_icon(@group), alt: '', class: 'avatar group-avatar s160'
          %p.light
            - if @group.avatar?
              你可以在此变更群组图标
            - else
              你可以在此上传群组图标
          = render 'shared/choose_group_avatar_button', f: f
          - if @group.avatar?
            %hr
            = link_to '删除图标', group_avatar_path(@group.to_param), data: { confirm: "你确定要删除群组图标吗?"}, method: :delete, class: "btn btn-remove btn-sm remove-avatar"

      = render 'shared/visibility_level', f: f, visibility_level: @group.visibility_level, can_change_visibility_level: can_change_group_visibility_level?(@group), form_model: @group

      .form-group
        .col-sm-offset-2.col-sm-10
          = render 'shared/allow_request_access', form: f

      .form-group
        %hr
        = f.label :share_with_group_lock, class: 'control-label' do
          Share with group lock
        .col-sm-10
          .checkbox
            = f.check_box :share_with_group_lock
            %span.descr Prevent sharing a project with another group within this group


      .form-actions
        = f.submit '保存', class: "btn btn-save"

.panel.panel-danger
  .panel-heading 删除群组
  .panel-body
    %p
      Removing group will cause all child projects and resources to be removed.
      %br
      %strong 群组被删除后不可恢复!

    .form-actions
      = link_to '删除群组', @group, data: {confirm: 'Removed group can not be restored! Are you sure?'}, method: :delete, class: "btn btn-remove"
